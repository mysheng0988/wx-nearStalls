  font-size: 24rpx;
}

.font-30 {
  font-size: 30rpx;
}

.font-32 {
  font-size: 32rpx;
}
.border-line{
  height: 1px;
  width: 750rpx;
  background:  rgba(0, 0, 0, 0.1);
}
.height-60 {
  height: 60rpx;
