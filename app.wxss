/**app.wxss**/
@import "colorui/main.wxss";
@import "colorui/icon.wxss";
page {
  background: #f4f4f4;
  font-size: 28rpx;
  color: #333;
}

.flex {
  display: flex;
  display: -webkit-flex;
  align-items: center;
}



.margin-top {
  margin-top: 18rpx;
}
margin-bootom{
  margin-bottom: 18rpx;
}

.flex-column {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
}
.flex-center{
  display: flex;
  display: -webkit-flex;
   align-items: center;
}
.flex-wrap {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: wrap;
}

.align-self {
  align-self: flex-end;
}

.padding-box {
  padding: 18rpx 30rpx;
}
.padding {
  padding: 15rpx 10rpx;
}
.padding-bottom {
  padding-bottom: 50rpx;
}

.padding-right {
  padding-right: 30rpx;
}

.padding-left-right {
  padding: 0 30rpx;
}

.padding-top-down {
  padding: 18rpx 0;
}

.padding-left {
  padding-left: 30rpx;
}

.margin-left {
  margin-left: 30rpx;
}

.padding-top {
  padding-top: 18rpx;
}

.padding-top-left {
  padding: 18rpx 30rpx 0 30rpx;
}
/*标展示 */
.img-icon {
  width: 140rpx;
  height: 140rpx;
  vertical-align: middle;
}

