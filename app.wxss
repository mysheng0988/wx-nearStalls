}

.border-top {
  width: 690rpx;
  height: 2rpx;
  background: #f5f5f5;
  margin: 0 auto;
}

.border-top-top {
  width: 690rpx;
  height: 2rpx;
  background: #f5f5f5;
  margin: 0 auto;
  margin-top: 18rpx;
}
/* 按钮点击效果 */
.btn-hover{
  position: relative;
  top: 3rpx;
  box-shadow:0px 0px 8px #999 inset; 
}
/* 镂空按钮 点击阴影不宜太深 */
.plain-hover{
  position: relative;
  top: 3rpx;
  box-shadow:0px 0px 10px #bbbec4 inset; 
}
