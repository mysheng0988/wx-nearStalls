page{
  background: #fff;
}
.container{
  padding: 18rpx 36rpx;
  margin-bottom: 200rpx;
}
.title{
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}
.top{
  margin-top:40rpx;
}
.content-text{
  width: 678rpx;
  height: 318rpx;
  margin: 24rpx 0;
  padding: 10rpx;
  line-height: 50rpx;
  border-radius: 8rpx;
  position: relative;
}
.fontNum{
  position: absolute;
  bottom:0;
  right: 10rpx;
  font-size: 28rpx;
  color: #999;
}
.content-text textarea{
  width: 678rpx;
  height: 318rpx;
  line-height: 50rpx;
  background: #F8F8F8;
  border-radius: 8rpx;
}
.img-box{
  padding: 10rpx 0;
}
.addr-box {
  flex-wrap: wrap;
}
.item-img{
   width: 214rpx;
   height: 214rpx;
   margin: 5rpx;
   border-radius: 8rpx;
   overflow: hidden;
   position: relative;
}
.remove{
  width: 45rpx;
  height: 45rpx;
  border-radius: 0 0 0 35rpx;
  text-align: right;
  position: absolute;
  background: #000;
  opacity: 0.5;
  top:0;
  right: 0;
}
.remove .image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  overflow: hidden;
}
.item-img .img{
  width: 100%;
  height: 100%;
  vertical-align: middle;
  overflow: hidden;
}
.tip{
  font-size: 28rpx;
  color: #DE5C68;
  line-height: 50rpx;
}

.submit{
  margin: 36rpx;
  width: 678rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #eb3c31;
  color: #fff;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 44rpx;
  letter-spacing: 2rpx;
  box-shadow: 0 0 8rpx rgba(193, 31, 21, 0.4)
  
}