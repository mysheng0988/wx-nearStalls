page{
    background: #fff;
}
.container {
  padding: 10rpx 30rpx;
  text-align: justify;
}
switch .wx-switch-input:not([class*="bg-"]) {
  background: var(--red) !important;
}
.cardImg{
  border-top: 1rpx solid #eee;
  padding:  18rpx 30rpx;
  font-size: 30rpx;
}
.img-box{
  padding: 10rpx 0;
}
.addr-box {
  flex-wrap: wrap;
}
.item-img{
   width: 214rpx;
   height: 214rpx;
   margin: 5rpx;
   border-radius: 8rpx;
   overflow: hidden;
   position: relative;
}
.remove{
  width: 45rpx;
  height: 45rpx;
  border-radius: 0 0 0 35rpx;
  text-align: right;
  position: absolute;
  background: #000;
  opacity: 0.5;
  top:0;
  right: 0;
  z-index: 1000;
}
.remove .image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  overflow: hidden;
}
.item-img .img{
  width: 100%;
  height: 100%;
  vertical-align: middle;
  overflow: hidden;
}
.btn-box{
  padding: 18rpx 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
}
.edit-btn{
  height: 80rpx;
  line-height: 80rpx;
  width: 690rpx;
  border-radius: 40rpx;
  text-align: center;
}