/**index.wxss**/
.container{
  background: #f1f1f1;
  /* background-color: red; */
}
.swiper {
  width: 100%;
  height: 400rpx;
}
.swiper image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
  /* border-radius: 20rpx; */
  overflow: hidden;
}
.nav{
  margin: 10rpx 0;
  box-shadow: 0 1rpx 1rpx rgba(0, 0, 0, 0.05);
}
.search-box{
  width: 100%;
  padding-top: 30rpx;
  background: #fff;
  border-radius: 50rpx 50rpx 0 0;
}
.scan-qrcode{
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
  overflow: hidden;
  vertical-align: middle;
}
.srcoll{
  width: 600rpx;
  font-size: 30rpx;
  white-space: nowrap;
  line-height: 70rpx;
  color: #986D3B;
  animation: myfirst 20s linear infinite;
}
@keyframes myfirst{
 0% {
        margin-left: 750rpx;
    }
    100% {
       margin-left: -1500rpx;
    }
}
.scroll-box{
  position: relative;
  flex: 1;
  background: #FCF8E3;
  height: 70rpx;
  overflow: hidden;
}
.notice-box{
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  background: #FCF8E3;
  padding: 10rpx 30rpx; 
  margin: 10rpx 0;
  color: #986D3B;
  font-size: 30rpx;
}

.notice-box image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  overflow: hidden;
  vertical-align: middle;
}
.notice-box .img{
  width: 30rpx;
  height: 30rpx;
  padding-left: 10rpx;
  margin-right: -10rpx;
  overflow: hidden;
  vertical-align: middle;
}
.swiper_container {
  height: 50rpx;
  flex: 1;
}

.swiper_item {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


 .cu-item .img{
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  border-radius: 20rpx;
}
.title-box{
  height: 80rpx;
  line-height: 80rpx;
  padding: 20rpx 36rpx;
  margin-top:20rpx;
  background: #fff;
}
.title-box .title{
  font-size: 36rpx;
  color: #000000;
  font-weight: bold
}
.scene{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  display: flex;
  display:-webkit-flex;
  border-radius: 20rpx;
  overflow: hidden;
}
.timeNum{
  width: 50rpx;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  color: #333;
  border-radius: 8rpx;
  background-image: -moz-linear-gradient(90deg,#FFCF05, #FFFB4D);
  background-image: -webkit-linear-gradient(90deg,#FFCF05, #FFFB4D);
  background-image: -ms-linear-gradient(90deg,#FFCF05, #FFFB4D);
  margin: 0 10rpx;
}
.scene-time{
  background:#fff;
  color: #F75028;
  font-size: 30rpx;
  padding: 10rpx ;
}
.more{
  font-size: 24rpx;
  color: #666666;
}
.more image{
  width:12rpx;
  height:20rpx;
  margin-left:5rpx;
  margin-bottom:5rpx;
  vertical-align:middle;
  overflow:hidden;
}
.scroll-view{
  background: #fff;
}
.content-box{
  align-items: center;
  padding: 18rpx 36rpx;
}
.kill-item{
  width: 330rpx;
}
.kill-item .img{
  width: 300rpx;
  height: 300rpx;
  margin-right: 36rpx;
  vertical-align: center;
  border-radius: 10rpx;
}
.price-box{
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  display: -webkit-flex;
  align-items: baseline;
}
.price-box .original{
  text-decoration:line-through;
  color:#999;
  font-size:20rpx;
}
.price-box .price{
  font-size:28rpx;
  color:#ff3e3e;
  padding-left: 20rpx;
}
/* 店铺 */
.shop-item{
  width: 380rpx;
}
.shop-item .img{
  width: 360rpx;
  height: 220rpx;
  background: #eee;
  margin-right: 36rpx;
  vertical-align: center;
  border-radius: 10rpx;
}
.shop-name{
  line-height: 60rpx;
  font-size: 26rpx;
  color:#222;
}
.re-title{
  width: 750rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  text-align: center;
}
