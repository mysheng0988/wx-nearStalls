.fixed{
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 1024;
}
.stalls-box{
  padding-bottom: 120rpx;
}
swiper {
  width:100%;
  height:400rpx;
}
.shop-msg{
  padding: 0 30rpx;
  padding-top:18rpx;
  background-color: #fff;
}
.logo{
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
  border-radius: 10rpx;
}
.logo image{
  width: 100%;
  height: 100%;
  overflow: hidden;
  vertical-align: middle;
}
.shop-content{
  flex: 1;
  text-align: left;
  margin: 0 10rpx;
  color: #222;
}
.shop-nav{
  margin: 10rpx 0;
  background-color: #fff;
  box-shadow: 0 1rpx 1rpx rgba(0, 0, 0, 0.05);
}
.shop-content .score{
  width: 150rpx;
  font-size: 20rpx;
  color: #666;
}
.shop-content .img{
  width:12rpx;
  height:20rpx;
  margin-left:5rpx;
  margin-bottom:5rpx;
  vertical-align:middle;
  overflow:hidden;
}
.shop-btn{
  width: 100rpx;
  height: 40rpxrpx;
  line-height: 40rpx;
  background: #e54d42;
  border-radius: 20rpx;
  text-align: center;
  color: #fff;
}
.btn-box{
  padding: 18rpx 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
}
.edit-btn{
  height: 80rpx;
  line-height: 80rpx;
  width: 690rpx;
  border-radius: 40rpx;
  text-align: center;
}
.address{
  padding:18rpx 30rpx;
  background-color: #fff;
  white-space:normal;
  word-wrap:break-word;
}