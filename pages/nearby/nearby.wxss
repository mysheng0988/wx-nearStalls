.list-box{
     margin-top: 10rpx;
}
.item-box{
  padding: 20rpx 40rpx;
  background: #fff;
  line-height: 50rpx;
  margin-bottom: 5rpx;
}

.item-box .img{
   width: 100rpx;
   height: 100rpx;
   border-radius: 10px;
   overflow: hidden;
   margin-right: 10rpx;
}
.item-box .img image{
   width: 100%;
   height: 100%;
   vertical-align: middle;
   overflow: hidden
}
.item-box  .content{
  line-height: 40rpx;
  flex: 1;
  white-space:normal;
  word-wrap:break-word;
}
.item-box  .content-title{
    font-size: 28rpx;
    font-weight: bold;
    margin-bottom: 5rpx;
}
.item-box  .address{
   flex: 1;
  font-size: 24rpx;
  color: #999;
}
.item-box  .distance{
  width: 120rpx;
  font-size: 24rpx;
  color: #999;
  text-align: right;
}






































