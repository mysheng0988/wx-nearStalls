.container{
   padding-bottom: 120rpx;
}
.scroll{
  height: 100%;
}
swiper{
  height:750rpx;
}
.item-box{
 margin-top: 20rpx;
 padding: 18rpx 30rpx;
 background: #fff;
}
.name{
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 5px;

}
.collect_img{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  overflow: hidden;
}
.title{
  font-size: 24rpx;
  color: #999;
  line-height: 50rpx;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  overflow:hidden;
  white-space:pre-wrap;
}
.price{
  height: 70rpx;
  line-height: 70rpx;
  color: #EB3C31;
  font-size:32rpx;
  font-weight: bold;
}
.select-img{
  margin:0 5px;
  width: 35rpx;
  height: 35rpx;
  overflow: hidden;
  vertical-align: center;

}
.attr{
  flex-wrap:wrap;
  line-height: 60rpx;
  font-size: 24rpx;
}
.ensure{
  margin-right: 10px;
}
.shop{
  position: fixed;
  width: 100%;
  bottom: 0
}

.shop-msg{
  margin-top: 20rpx;
  padding: 18rpx 30rpx;
  
}
.logo{
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
  border-radius: 10rpx;
}
.logo image{
  width: 100%;
  height: 100%;
  overflow: hidden;
  vertical-align: middle;
}
.shop-content{
  flex: 1;
  text-align: left;
  margin: 0 10rpx;
  color: #222;
}
.shop-content .score{
  margin-top:10rpx;
  width: 150rpx;
  font-size: 26rpx;
  color: #666;
}
.shop-msg .shop-content .img{
  width:12rpx;
  height:20rpx;
  margin-left:5rpx;
  margin-bottom:5rpx;
  vertical-align:middle;
  overflow:hidden;
}
.shop-btn{
  width: 100rpx;
  height: 40rpxrpx;
  line-height: 40rpx;
  background: #e54d42;
  border-radius: 20rpx;
  text-align: center;
  color: #fff;
}
.address-box{
  width: 100%;
  font-size: 36rpx;
  line-height: 30rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
}
.location-box{
  margin-top: 10rpx;
  width: 550rpx;
  color: #666;
  font-size: 28rpx;
  line-height: 45rpx;
  white-space:normal;
  word-wrap:break-word;
}
.distance{
  font-size: 28rpx;
  color: #333;
  line-height: 45rpx;
}
.shop-msg .img{
  height: 50rpx;
  width: 50rpx;
  overflow: hidden;
  vertical-align: middle;
}