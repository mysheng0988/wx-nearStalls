.update-box{
  padding: 18rpx 30rpx;
  background-color: #fff;
  margin-top: 4rpx;
}
.img-box{
  padding: 10rpx 0;
}
.addr-box {
  flex-wrap: wrap;
}
.item-img{
   width: 214rpx;
   height: 214rpx;
   margin: 5rpx;
   border-radius: 8rpx;
   overflow: hidden;
   position: relative;
}
.remove{
  width: 45rpx;
  height: 45rpx;
  border-radius: 0 0 0 45rpx;
  text-align: right;
  position: absolute;
  background: #fff;
  opacity: 0.5;
  top:0;
  right: 0;
  z-index: 100;
}
.remove .image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  overflow: hidden;
}
.item-img .img{
  width: 100%;
  height: 100%;
  vertical-align: middle;
  overflow: hidden;
}
.tip{
  font-size: 28rpx;
  color: #DE5C68;
  line-height: 50rpx;
}

.btn-box{
  padding: 18rpx 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
}
.edit-btn{
  height: 80rpx;
  line-height: 80rpx;
  width: 690rpx;
  border-radius: 40rpx;
  text-align: center;
}