.list-box{
  padding-bottom: 120rpx;
}
.item-box{
  margin-top: 10rpx;
  padding: 18rpx 30rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
}
.img{
  border-radius: 10rpx;
  width: 180rpx;
  height: 180rpx;
  overflow: hidden;
  vertical-align: middle;
}
.img image{
  width: 100%;
  height: 100%;
  overflow: hidden;
  vertical-align: middle;
}
.item-box .content{
  height: 180rpx;
  padding-left:10px;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: space-between;
  flex:1
}
.item-box .content .title{
  font-size: 24rpx;
  color: #999;
  line-height: 45rpx;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  overflow:hidden;
  white-space:normal;
  white-space:pre-wrap;
}
.item-box .content .state{
   font-size: 20rpx;
}
.item-box .content .cu-btn{
  margin-left: 10rpx;
}

.btn-box{
  padding: 18rpx 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
}
.edit-btn{
  height: 80rpx;
  line-height: 80rpx;
  width: 690rpx;
  border-radius: 40rpx;
  text-align: center;
}