/* pages/person/person.wxss */
.container{
  height: 100vh;
}
.header-box{
  width: 750rpx;
  height: 630rpx;
  position: relative;
}
.top-bg-img{
  height: 350rpx;
}
.login{
  padding-top:120rpx;
  padding-left: 50rpx;
  padding-right: 100rpx;
  height: 200rpx;
  align-items: center;
}
.context{
  flex: 1;
  font-size: 28rpx;
  color: #ffffff;
  margin: 20rpx;
  letter-spacing: 2rpx;
}
.right{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.right image{
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.header {
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  border-radius: 50%;
  border: 1px solid rgba(0, 0, 0, 0.3) ; 
  overflow: hidden;
}
.header .img{
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
  overflow: hidden;
}
.setting{
  width: 40rpx;
  height: 40rpx;
}
.setting image{
  width: 100%;
  height: 100%;
  overflow: hidden;
  vertical-align: middle;
}
.follow{
  margin-top:55rpx;
  font-size: 24rpx;
}
.follow-item{
  flex: 1;
  text-align: center;
}

.item-box{
  height: 80rpx;
  line-height: 80rpx;
  color: #666;
  background: #fff;
  margin-top: 20rpx;
  padding: 0 30rpx;
}
.item-box image{
  width: 40rpx;
  height: 40rpx;
  overflow: hidden;
  vertical-align: middle;
}
.item-box .content{
  flex: 1;
  text-align: left;
  margin: 0 10rpx;
}
.canvas{
  margin:0 auto;
  width: 400rpx;
  height: 400rpx;
}